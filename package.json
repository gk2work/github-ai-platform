{
  "name": "github-ai-platform",
  "version": "1.0.0",
  "description": "AI-powered GitHub code intelligence platform",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "setup": "bash scripts/setup.sh",
    "install:all": "npm install && npm run install:packages",
    "install:packages": "npm install --workspaces",
    "dev": "bash scripts/dev.sh",
    "dev:core": "npm run dev --workspace=packages/core",
    "dev:api": "npm run dev --workspace=packages/api", 
    "dev:web": "npm run dev --workspace=packages/web",
    "dev:ai": "npm run dev --workspace=packages/ai",
    "build": "bash scripts/build.sh",
    "build:shared": "npm run build --workspace=packages/shared",
    "build:core": "npm run build --workspace=packages/core",
    "test": "bash scripts/test.sh",
    "test:shared": "npm run test --workspace=packages/shared",
    "test:core": "npm run test --workspace=packages/core",
    "lint": "npm run lint --workspaces",
    "cli": "npm run start --workspace=packages/cli",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "clean": "bash scripts/clean.sh",
    "postinstall": "npm run build:shared"
  },
  "devDependencies": {
    "concurrently": "^8.2.0",
    "lerna": "^7.1.0",
    "typescript": "^5.1.6",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.44.0",
    "prettier": "^3.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
